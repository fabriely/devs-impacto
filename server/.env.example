# ###### GENERAL SETTINGS #######
PROJECT_NAME=devs-impacto

# ###### SERVER SETTINGS #######
SERVER_PORT=3001
NODE_ENV=development
FRONTEND_URL=https://devs-impacto.vercel.app

# ###### DATABASE SETTINGS #######
DATABASE_TYPE=postgres
DATABASE_HOST=${PROJECT_NAME}-db
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=docker
DATABASE_DB=${PROJECT_NAME}

# ###### TEST DATABASE SETTINGS #######
DATABASE_TEST_HOST=localhost
DATABASE_TEST_PORT=5433
DATABASE_TEST_USER=postgres
DATABASE_TEST_PASSWORD=docker
DATABASE_TEST_DB=devs-impacto-test

DATABASE_URL=${DATABASE_TYPE}://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_DB}

# Chave da API da OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Twitter/X API Configuration (para publicação automática de PLs)
TWITTER_API_KEY=your-twitter-api-key-here
TWITTER_API_SECRET=your-twitter-api-secret-here
TWITTER_ACCESS_TOKEN=your-twitter-access-token-here
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret-here

# ###### REDIS SETTINGS #######
# Para Docker: use o nome do container (devs-impacto-redis)
# Para local: use localhost
REDIS_HOST=${PROJECT_NAME}-redis
REDIS_PORT=6379

# Database Configuration
DATABASE_URL=sqlite:///data/voz_local.db

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-api-key-here

# Logging Configuration
LOG_LEVEL=INFO

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_BASE=1.0

# Security Configuration
ENCRYPTION_KEY=generate-with-fernet-key

# Dashboard Configuration
DASHBOARD_UPDATE_INTERVAL=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
